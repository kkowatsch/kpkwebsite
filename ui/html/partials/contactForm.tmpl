{{define "contactForm"}}
<form action="/contact" method="post" autocomplete="on">
    {{range .Form.NonFieldErrors}}
    <div class="error">{{.}}</div>
    {{end}}
    <div class="label-input-group">
        {{with .Form.FieldErrors.fullname}}
        <p class="error">{{.}}</p>
        {{end}}
        <label for="flname">First & Last Name</label>
        <input id="flname" type="text" name="name" value="{{ .Form.Fullname }}"
            placeholder="Please enter your full name..." required>
    </div>
    <div class="label-input-group">
        <label for="cname">Company Name</label>
        <input id="cname" type="text" name="cname" placeholder="Please enter your company name...">
    </div>
    <div class="label-input-group">
        {{with .Form.FieldErrors.email}}
        <p class="error">{{.}}</p>
        {{end}}
        <label for="email">Email Address</label>
        <input id="email" type="email" name="email" value="{{ .Form.Email }}"
            placeholder="Please enter your email address..." required>
    </div>
    <div class="label-input-group">
        {{with .Form.FieldErrors.phone}}
        <p class="error">{{.}}</p>
        {{end}}
        <label for="phone">Phone number</label>
        <input id="phone" type="tel" name="phone" value="{{ .Form.Phone }}"
            placeholder="Please enter your phone number..." required>
    </div>
    <div class="label-input-group">
        {{with .Form.FieldErrors.content}}
        <p class="error">{{.}}</p>
        {{end}}
        <label for="message-input">Message</label>
        <textarea id="message-input" name="message" rows="8" cols="50"
            placeholder="In a sentence or two, please describe the service we can assist you with."
            required>{{ .Form.Content }}</textarea>
    </div>
    <input type="submit" value="Submit" />
</form>
{{end}}